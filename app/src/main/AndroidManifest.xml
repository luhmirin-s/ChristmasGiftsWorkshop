<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="lv.luhmirins.christmasgifts"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".list.GiftListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".form.GiftFormActivity"
            android:label="@string/title_activity_form"
            android:parentActivityName=".list.GiftListActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".list.GiftListActivity"/>
        </activity>

    </application>

</manifest>
